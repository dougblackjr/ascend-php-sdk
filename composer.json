{
    "name": "your-vendor/ascend-php-sdk",
    "description": "Official PHP SDK for the Ascend insurance payments platform API",
    "type": "library",
    "keywords": ["ascend", "insurance", "payments", "api", "sdk", "laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "guzzlehttp/guzzle": "^7.5",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration (^10.0|^11.0)"
    },
    "autoload": {
        "psr-4": {
            "AscendSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AscendSDK\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AscendSDK\\AscendServiceProvider"
            ],
            "aliases": {
                "Ascend": "AscendSDK\\Facades\\Ascend"
            }
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
